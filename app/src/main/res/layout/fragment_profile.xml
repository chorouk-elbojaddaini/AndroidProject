<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/black2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- TODO: Update blank fragment layout -->


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           tools:context=".me"
           android:background="@color/dark_grey"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.0">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"

               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/border_bottom"
                   >

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="7dp"
                       android:layout_marginBottom="14dp"
                       android:fontFamily="@font/poppins"
                       android:gravity="center_horizontal"
                       android:text="Profile"
                       android:textColor="@color/darkBlue"
                       android:textFontWeight="500"
                       android:textSize="20dp" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:background="@color/white"
                   >

                   <LinearLayout
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/drawable_button"

                       >
                       <TextView
                           android:id="@+id/abreviation"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="RH"
                           android:fontFamily="@font/robotobla"
                           android:textColor="@color/white"
                           android:textSize="19dp"
                           android:layout_marginLeft="11.9dp"
                           android:layout_marginTop="10dp"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_marginTop="5dp"
                       >
                       <TextView
                           android:id="@+id/nom"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Rim Hassani"
                           android:textSize="20dp"
                           android:fontFamily="@font/robotobold"
                           android:textColor="@color/dark_grey2"
                           android:layout_marginBottom="25dp"
                           />
                       <TextView
                           android:id="@+id/emailtxt"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="hassaniidrissirim190@gmail.com"
                           android:fontFamily="@font/robotoreg"
                           android:textColor="@color/dark_grey2"
                           />
                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:layout_marginTop="20dp"
                   android:paddingBottom="20dp"
                   android:layout_marginBottom="10dp">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="-20dp"
                       android:orientation="vertical">






                       <TextView
                           android:id="@+id/domaine_section"
                           android:layout_width="220dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="92dp"
                           android:layout_marginTop="10dp"
                           android:gravity="center_horizontal"
                           android:text="Enter your domaine"
                           android:textSize="20dp"
                           android:fontFamily="@font/robotobold"
                           android:textColor="@color/mainBlue"
                           ></TextView>


                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:orientation="vertical"
                   android:layout_marginTop="10dp"
                   >


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/poppins"
                           android:drawableStart="@drawable/ic_job"
                           android:layout_marginRight="10dp"
                           android:layout_marginLeft="10dp"

                           />
                       <TextView
                           android:id="@+id/workReload"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/robotobold"
                           android:text="Work Experience"
                           android:textColor="@color/pumpkin"
                           android:textSize="19dp"
                           android:layout_marginTop="4dp"
                           />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       >
                       <ListView
                           android:id="@+id/work_experience_list_view"
                           android:layout_width="wrap_content"
                           android:layout_height="250dp"></ListView>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="-20dp"
                           android:layout_marginBottom="20dp"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="190dp"
                               android:layout_marginTop="15dp"
                               android:drawableStart="@drawable/ic_outline_shopping_bag_24"
                               android:gravity="center_horizontal"
                               android:textSize="20dp"/>


                           <TextView
                               android:layout_width="220dp"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="90dp"
                               android:layout_marginTop="5dp"
                               android:gravity="center_horizontal"
                               android:text="Attract relevant opportunities with your work experience"
                               android:fontFamily="@font/robotoreg"
                               android:textColor="@color/dark_grey2"
                               />

                           <TextView
                               android:id="@+id/addWork"
                               android:layout_width="220dp"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="90dp"
                               android:layout_marginTop="10dp"
                               android:gravity="center_horizontal"
                               android:text="Add work experience"
                               android:textColor="@color/pumpkin"
                               android:textSize="18dp"
                               android:fontFamily="@font/robotobla"

                               />
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:orientation="vertical"
                   android:layout_marginTop="10dp"

                   android:layout_marginBottom="10dp"
                   >


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/poppins"
                           android:drawableStart="@drawable/ic_baseline_menu_book_24"
                           android:layout_marginRight="10dp"
                           android:layout_marginLeft="10dp"

                           ></TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/robotobold"
                           android:text="Education"
                           android:textColor="@color/pumpkin"
                           android:textSize="19dp"
                           android:layout_marginTop="4dp"
                           ></TextView>
                       <TextView
                           android:id="@+id/addEducation"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/robotobold"
                           android:text="Add"
                           android:textColor="@color/mainBlue"
                           android:textSize="14dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginLeft="190dp"
                           ></TextView>
                   </LinearLayout>

                   <ListView
                       android:id="@+id/educationListView"
                       android:layout_width="wrap_content"
                       android:layout_height="250dp"></ListView>


               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/white"

                   android:orientation="vertical"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/poppins"
                           android:drawableStart="@drawable/ic_baseline_data_exploration_24"
                           android:layout_marginRight="10dp"
                           android:layout_marginLeft="10dp"

                           ></TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/robotobold"
                           android:text="Skill"
                           android:textColor="@color/pumpkin"
                           android:textSize="19dp"
                           android:layout_marginTop="4dp"
                           ></TextView>
                   </LinearLayout>
                   <ListView
                       android:id="@+id/skill_list_view"
                       android:layout_width="wrap_content"
                       android:layout_height="200dp"
                       ></ListView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:background="@color/white"
                   >
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="-20dp"
                       android:orientation="vertical">


                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="190dp"
                           android:layout_marginTop="15dp"
                           android:drawableStart="@drawable/ic_baseline_data_exploration_24"
                           android:gravity="center_horizontal"
                           android:textSize="20dp"></TextView>

                       <TextView
                           android:layout_width="220dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="90dp"
                           android:layout_marginTop="5dp"
                           android:fontFamily="@font/robotoreg"
                           android:gravity="center_horizontal"
                           android:text="Stand out from other candidates with relevant skills"
                           android:textColor="@color/dark_grey2"></TextView>

                       <TextView
                           android:id="@+id/addSkill"
                           android:layout_width="220dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="90dp"
                           android:layout_marginTop="10dp"
                           android:gravity="center_horizontal"
                           android:text="Add a skill"

                           android:fontFamily="@font/robotobold"
                           android:textColor="@color/pumpkin"
                           ></TextView>


                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/white"

                   android:orientation="vertical"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/poppins"
                           android:drawableStart="@drawable/ic_outline_language_24"
                           android:layout_marginRight="10dp"
                           android:layout_marginLeft="10dp"

                           ></TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/robotobold"
                           android:text="Languages"
                           android:textColor="@color/pumpkin"
                           android:textSize="19dp"
                           android:layout_marginTop="4dp"
                           ></TextView>
                   </LinearLayout>
                   <ListView
                       android:id="@+id/languagess_list_view"
                       android:layout_width="wrap_content"
                       android:layout_height="200dp"
                       ></ListView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:layout_marginBottom="55dp"
                   android:paddingBottom="20dp"
                   >
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="-20dp"
                       android:orientation="vertical">


                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="190dp"
                           android:layout_marginTop="15dp"
                           android:drawableStart="@drawable/ic_outline_language_24"
                           android:gravity="center_horizontal"
                           android:textSize="20dp"></TextView>

                       <TextView
                           android:layout_width="220dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="90dp"
                           android:layout_marginTop="5dp"
                           android:fontFamily="@font/robotoreg"
                           android:gravity="center_horizontal"
                           android:text="Add a language to stand out form otther candidates"
                           android:textColor="@color/dark_grey2"></TextView>

                       <TextView
                           android:id="@+id/addLanguage"
                           android:layout_width="220dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="90dp"
                           android:layout_marginTop="10dp"
                           android:gravity="center_horizontal"
                           android:text="Add a language"

                           android:fontFamily="@font/robotobold"
                           android:textColor="@color/pumpkin"
                           ></TextView>


                   </LinearLayout>
               </LinearLayout>


           </LinearLayout>



       </ScrollView>


</FrameLayout>