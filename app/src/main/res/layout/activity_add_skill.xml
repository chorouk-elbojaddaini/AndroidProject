<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSkill"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:background="@drawable/border_bottom_large"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:id="@+id/cancelSkill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/robotobold"
                android:text="Cancel"
                android:textColor="@color/pumpkin"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-55dp"
                android:textSize="20dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/darkBlue"
                android:text="Skills"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:orientation="vertical"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-4dp"
                android:background="@null"
                android:fontFamily="@font/robotobold"

                android:hint="Enter a skill"
                android:textColor="@color/black3"
                android:textSize="14dp"></EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proficiency"
                    android:textSize="16dp"
                    android:textColor="@color/black3"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/robotobold"
                    android:layout_marginLeft="10dp"
                    ></TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:hint="Select Specialization"
                    android:textSize="14dp"
                    android:textColor="@color/black3"
                    android:layout_marginTop="-4dp"

                    android:fontFamily="@font/robotobold"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    ></EditText>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="190dp"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/darkBlue"
            android:textSize="17dp"
            android:text="Add"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/dark_grey2"
            android:text="Maximum number of skills:10"/>
    </LinearLayout>
</LinearLayout>