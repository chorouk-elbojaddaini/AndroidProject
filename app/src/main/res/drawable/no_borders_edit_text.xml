<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_focused="false" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#fff" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#fff" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>
</selector>